<body>
  <div class="container">
    <div class="columns pt-6">
      <div class="column">
        <h2 class="is-size-3 has-text-white">Name</h2>
        <br />
        <input class="input has-background-black-ter has-text-white" type="text" id="name" placeholder="Input Character Name" />
      </div>
      <div class="column">
        <h2 class="is-size-3 has-text-white">Description</h2>
        <br />
        <input class="input has-background-black-ter has-text-white"
          type="text"
          id="desc"
          placeholder="Input Character Description"
        />
      </div>
    </div>
    <div class="columns">
      <div class="column">
        <h2 class="is-size-3 has-text-centered has-text-white">Races</h2>

        <table class="table has-background-black-ter">
          <tr>
            <td>
              <input
                type="checkbox"
                id="dragonbornRace"
                onchange="updateRace();"
              />
            </td>
            <td class="tabletext has-text-white">Dragonborn [+2 Strength, +1
              Charisma]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="dwarfRace" onchange="updateRace();" />
            </td>
            <td class="tabletext has-text-white">Dwarf [+2 Constitution]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="elfRace" onchange="updateRace();" />
            </td>
            <td class="tabletext has-text-white">Elf [+2 Dexterity]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="gnomeRace" onchange="updateRace();" />
            </td>
            <td class="tabletext has-text-white">Gnome [+2 Intelligence]</td>
          </tr>
          <tr>
            <td>
              <input
                type="checkbox"
                id="halfElfRace"
                onchange="updateRace();"
              />
            </td>
            <td class="tabletext has-text-white">Half-Elf [+2 Charisma, +1 Two
              Other Abilities]</td>
          </tr>
          <tr>
            <td>
              <input
                type="checkbox"
                id="halflingRace"
                onchange="updateRace();"
              />
            </td>
            <td class="tabletext has-text-white">Halfling [+2 Dexterity]</td>
          </tr>
          <tr>
            <td>
              <input
                type="checkbox"
                id="halfOrcRace"
                onchange="updateRace();"
              />
            </td>
            <td class="tabletext has-text-white">Half-Orc [+2 Strength, +1
              Constitution]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="humanRace" onchange="updateRace();" />
            </td>
            <td class="tabletext has-text-white">Human [+1 All Abilities]</td>
          </tr>
          <tr>
            <td>
              <input
                type="checkbox"
                id="tieflingRace"
                onchange="updateRace();"
              />
            </td>
            <td class="tabletext has-text-white">Tiefling [+2 Charisma, +1
              Intelligence]</td>
          </tr>
        </table>

        <h2 class="is-size-3 has-text-centered has-text-white">Classes</h2>

        <table class="table has-background-black-ter">
          <tr>
            <td>
              <input type="checkbox" id="barbarianClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Barbarian [Hit Die: d12]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="bardClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Bard [Hit Die: d8]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="clericClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Cleric [Hit Die: d8]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="druidClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Druid [Hit Die: d8]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="fighterClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Fighter [Hit Die: d10]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="monkClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Monk [Hit Die: d8]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="paladinClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Paladin [Hit Die: d10]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="rangerClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Ranger [Hit Die: d10]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="rogueClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Rogue [Hit Die: d8]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="sorcererClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Sorcerer [Hit Die: d6]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="warlockClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Warlock [Hit Die: d8]</td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="wizardClass" onchange="" />
            </td>
            <td class="tabletext has-text-white">Wizard [Hit Die: d6]</td>
          </tr>
        </table>
      </div>
      <div class="column">
        <h2 class="is-size-3 has-text-centered has-text-white">Player Level</h2>

        <br />

        <input
          class="level has-background-black-ter has-text-white"
          type="number"
          id="playerLevel"
          min="1"
          max="20"
          value="1"
          onchange="changeLevel();"
        />

        <br /><br />

        <h2 class="is-size-3 has-text-centered has-text-white">Ability Scores</h2>

        <br />

        <table class="table has-background-black-ter has-text-white">
          <tr>
            <th class="text-column has-text-white">Ability</th>
            <th class="text-column has-text-white">Score</th>
            <th class="text-column has-text-white">Modifier</th>
          </tr>
          <tr>
            <td>Strength</td>
            <td>
              <input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="15"
                id="strScore"
                onchange="updateMods()"
              />
            </td>
            <td><input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="0"
                id="strMod"
              /></td>
          </tr>
          <tr>
            <td>Dexterity</td>
            <td>
              <input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="14"
                id="dexScore"
                onchange="updateMods()"
              />
            </td>
            <td><input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="0"
                id="dexMod"
              /></td>
          </tr>
          <tr>
            <td>Constitution</td>
            <td>
              <input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="13"
                id="conScore"
                onchange="updateMods()"
              />
            </td>
            <td><input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="0"
                id="conMod"
              /></td>
          </tr>
          <tr>
            <td>Intelligence</td>
            <td>
              <input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="12"
                id="intScore"
                onchange="updateMods()"
              />
            </td>
            <td><input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="0"
                id="intMod"
              /></td>
          </tr>
          <tr>
            <td>Wisdom</td>
            <td>
              <input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="10"
                id="wisScore"
                onchange="updateMods()"
              />
            </td>
            <td><input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="0"
                id="wisMod"
              /></td>
          </tr>
          <tr>
            <td>Charisma</td>
            <td>
              <input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="8"
                id="chaScore"
                onchange="updateMods()"
              />
            </td>
            <td><input
                class="input has-background-black-ter has-text-white"
                type="number"
                value="0"
                id="chaMod"
              /></td>
          </tr>
        </table>
        <h2 class="is-size-3 has-text-centered has-text-white">Hit Die</h2>
        <br />

        <input class="diebtn has-background-black-ter has-text-white has-text-centered type="text" id="hitDie" value="Hit Die: " />
      </div>

      <div class="column">
        <h2 class="is-size-3 has-text-centered has-text-white">Proficiency Bonus</h2>

        <br />

        <input
          class="input has-background-black-ter has-text-white"
          type="number"
          id="profBonus"
          value="2"
        />

        <h2 class="is-size-3 has-text-centered has-text-white">Skills</h2>

        <table class="table has-background-black-ter has-text-white">
          <tr>
            <td>
              <input type="checkbox" id="acroProf" onchange="updateSkills();" />
            </td>
            <td>Acrobatics:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="acroScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="animProf" onchange="updateSkills();" />
            </td>
            <td>Animal Handling:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="animScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="arcaProf" onchange="updateSkills();" />
            </td>
            <td>Arcana:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="arcaScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="athlProf" onchange="updateSkills();" />
            </td>
            <td>Athetics:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="athlScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="decProf" onchange="updateSkills();" />
            </td>
            <td>Deception:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="decScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="hisProf" onchange="updateSkills();" />
            </td>
            <td>History:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="hisScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="insProf" onchange="updateSkills();" />
            </td>
            <td>Insight:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="insScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="intiProf" onchange="updateSkills();" />
            </td>
            <td>Intimidation:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="intiScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="invProf" onchange="updateSkills();" />
            </td>
            <td>Investigation:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="invScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="medProf" onchange="updateSkills();" />
            </td>
            <td>Medicine:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="medScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="natProf" onchange="updateSkills();" />
            </td>
            <td>Nature:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="natScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="percProf" onchange="updateSkills();" />
            </td>
            <td>Perception:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="percScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="perfProf" onchange="updateSkills();" />
            </td>
            <td>Performance:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="perfScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="persProf" onchange="updateSkills();" />
            </td>
            <td>Persuasion:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="persScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="relProf" onchange="updateSkills();" />
            </td>
            <td>Religion:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="relScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="sleiProf" onchange="updateSkills();" />
            </td>
            <td>Sleight of Hand:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="sleiScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="steProf" onchange="updateSkills();" />
            </td>
            <td>Stealth:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="steScore"
              /></td>
          </tr>
          <tr>
            <td>
              <input type="checkbox" id="survProf" onchange="updateSkills();" />
            </td>
            <td>Survival:</td>
            <td><input
                class="has-background-grey-darker has-text-white"
                type="number"
                id="survScore"
              /></td>
          </tr>
        </table>
      </div>
    </div>
  </div>
  <script src="/js/createchar.js"></script>
</body>